{% extends 'base.html.twig' %}

{% block title %}Strona domowa{% endblock %}

{% block content %}
    <div class="max-w-md mx-auto mt-4 p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold mb-4">Zaloguj się</h1>
        <form action="{{ path('login') }}" method="post">
            <div class="mb-4">
                <label for="email" class="custom-label">E-mail</label>
                <input type="email" id="email" name="email" class="custom-input" placeholder="Twój adres e-mail" required>
            </div>
            <div class="mb-6">
                <label for="password" class="custom-label">Hasło</label>
                <input type="password" id="password" name="password" class="custom-input" placeholder="Twoje hasło" required>
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Zaloguj się</button>
                <a href="#" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Zapomniałeś hasła?</a>
            </div>
        </form>
    </div>
{% endblock %}
